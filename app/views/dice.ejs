<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dice Roll</title>
    <link rel="stylesheet" href="/css/dice.css">
   </head>
     <body>
       <h1>Rolling <%= rolls %> dice</h1>
        <% var sum = 0 %>
        <% for( var i = 0; i < rolls; i++) { %> 
        <% var n = (Math.floor(Math.random() * 6) + 1) %>
        <% sum += n %>
        <% var pic = "/images/dice" + n + ".png" %>
        <img src="<%= pic %>">
        <% } %>
       <h2>Sum = <%= sum %> </h2>
      </body>
    </html>


