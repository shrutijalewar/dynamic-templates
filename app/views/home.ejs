<!doctype html>
<html>
  <head>
  <meta charset="utf8">
  <link rel="stylesheet" href="/css/style.css">
  
  <title>Dynamic Templates</title>
  </head>
    <body>
      <nav>

      </nav>
  <h1 style="color:red;background-color:yellow;">Welcome to Dynamic Templates</h1>
  <h2>Multiply 3 * 3 = <%= 3*3 %></h2>
  <h2>A random number between 3 and 12 is <%= Math.floor(Math.random()* 10) + 3 %></h2>
  <% var a = 3, b = 2 %>
  <p> <%= a + b%></p>

  <% if(a === 3){ %>
  <p> a is 3</p>
  <% }else{ %>
  <p>a not 3 </p>
  <% }  %>
  <% var fonts = ['Audiowide', 'sigmar one', 'lovers quarrel'] %>
  
  <% var colors = ['cyan','green', 'yellow', 'orange','pink', 'red', 'purple'] %>
  <% for(var i = 0; i < colors.length; i++){%>
  <p style="color:<%= colors[i]%>; font-size: <%=22 +(i*2) %>px; font-family:<%= fonts[i%3] %>;
  background-color:<%=(i===colors.length - 1 ) ? colors[0] :colors[i+1] %>"> <%= colors[i] %> </p>
  <% } %>
    </body>
</html>
